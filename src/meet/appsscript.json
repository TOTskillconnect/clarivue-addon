{
  "timeZone": "America/New_York",
  "dependencies": {
    "enabledAdvancedServices": []
  },
  "exceptionLogging": "STACKDRIVER",
  "runtimeVersion": "V8",
  "addOns": {
    "common": {
      "name": "Clarivue - Meeting Enhancement",
      "logoUrl": "https://clarivue.com/assets/clarivue-logo-64x64.png",
      "useLocaleFromApp": true,
      "homepageTrigger": {
        "runFunction": "onHomepage",
        "enabled": true
      },
      "universalActions": [
        {
          "label": "Refresh Content",
          "runFunction": "refreshContent"
        },
        {
          "label": "Account Settings",
          "runFunction": "openAccountSettings"
        }
      ]
    },
    "gmail": {},
    "calendar": {},
    "drive": {},
    "meet": {
      "homepageTrigger": {
        "runFunction": "onHomepage",
        "enabled": true
      },
      "onMeetingStartTrigger": {
        "runFunction": "onMeetingStart",
        "enabled": true
      },
      "onMeetingEndTrigger": {
        "runFunction": "onMeetingEnd",
        "enabled": true
      },
      "conferenceData": {
        "createSettingsUrl": "https://app.clarivue.com/settings/google-meet",
        "inConferenceData": {
          "addOnParameters": {
            "parameters": [
              {
                "key": "meetingId",
                "value": "{{meetingId}}"
              },
              {
                "key": "participantId", 
                "value": "{{participantId}}"
              },
              {
                "key": "timestamp",
                "value": "{{timestamp}}"
              },
              {
                "key": "organizerEmail",
                "value": "{{organizerEmail}}"
              }
            ]
          }
        }
      },
      "openLinkUrlPrefixes": [
        "https://app.clarivue.com/",
        "https://api.clarivue.com/",
        "https://clarivue.com/"
      ]
    }
  },
  "oauthScopes": [
    "https://www.googleapis.com/auth/script.external_request",
    "https://www.googleapis.com/auth/script.storage",
    "https://www.googleapis.com/auth/userinfo.email",
    "https://www.googleapis.com/auth/userinfo.profile"
  ],
  "webapp": {
    "access": "DOMAIN",
    "executeAs": "USER_ACCESSING"
  }
} 